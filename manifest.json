{
  "name": "RGS",
  "description": "RGS",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "http://localhost:3000/",
    "http://readgoodstuff.meteor.com/",
    "cookies"
  ],

  "content_scripts":[
    {
      "matches":["http://*/*"],
      "js":["content_script.js"]
    }
  ],

  "background": {
    "scripts": ["background.js", "lib/jquery-2.2.0.js", "lib/meteor-ddp.js"],
    "persistent": true
  },

  "browser_action": {
    "default_title": "RGS",
    "default_icon":"icon.png"
  },

  "manifest_version": 2
}
